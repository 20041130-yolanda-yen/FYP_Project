<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="fitXY"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="250dp">

        <ImageView
            android:id="@+id/btn_color_brand"
            android:layout_width="125dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:src="@drawable/button_color_brand"
            />

        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="125dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:src="@drawable/button_location"/>

        <ImageView
            android:id="@+id/btn_webScrap"
            android:layout_width="125dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:src="@drawable/button_web_scrapping"/>

        <ImageView
            android:id="@+id/btn_ANPR"
            android:layout_width="125dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:src="@drawable/button_anpr"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btn_retrieve"
            android:layout_width="150dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/button_retrieve" />

        <ImageView
            android:id="@+id/btn_export"
            android:layout_width="150dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/button_export"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>